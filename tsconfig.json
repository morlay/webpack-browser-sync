{
  "compilerOptions": {
    "rootDirs": [
      "src/**"
    ],
    "outDir": "lib",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "pretty": true,
    "sourceMap": false
  },
  "exclude": [
    "lib/*",
    "node_modules/*"
  ],
  "compileOnSave": true
}