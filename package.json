{
  "name": "webpack-browser-sync",
  "version": "0.5.0",
  "main": "lib/index.js",
  "description": "A webpack dev server with browser-sync",
  "bin": {
    "webpack-browser-sync": "bin/webpack-browser-sync.js"
  },
  "files": [
    "src/",
    "lib/",
    "bin/"
  ],
  "engines": {
    "node": ">= 6"
  },
  "scripts": {
    "build": "tsc",
    "webpack": "ts-node ./src/command.ts --config ./examples/webpack.config.js --hot --index=../index.html",
    "webpack2": "npm install webpack@2.2.0-rc.7 && npm run webpack",
    "lint": "tslint ./ --fix",
    "test": "npm run lint && npm run build && ava -v",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "@types/browser-sync": "0.0.x",
    "@types/compression": "0.0.x",
    "@types/lodash": "4.14.x",
    "@types/node": "7.0.x",
    "@types/webpack": "2.2.x",
    "@types/webpack-dev-middleware": "1.9.x",
    "@types/yargs": "6.5.x",
    "browser-sync": "2.18.x",
    "compression": "1.6.x",
    "connect-history-api-fallback": "1.3.x",
    "lodash": "4.17.x",
    "memory-fs": "0.4.x",
    "webpack-dev-middleware": "1.9.x",
    "webpack-hot-middleware": "2.15.x",
    "yargs": "6.6.x"
  },
  "peerDependencies": {
    "webpack": "*"
  },
  "devDependencies": {
    "ava": "0.17.0",
    "html-webpack-plugin": "2.26.x",
    "ts-loader": "1.3.3",
    "ts-node": "2.0.0",
    "tslint": "4.3.1",
    "typescript": "2.1.5",
    "webpack": "*"
  },
  "repository": "git@github.com:morlay/webpack-browser-sync.git",
  "author": "Morlay <morlay@qq.com>",
  "license": "WTFPL"
}
