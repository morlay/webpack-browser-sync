{
  "name": "webpack-browser-sync",
  "version": "0.3.1",
  "description": "A webpack dev server with browser-sync",
  "bin": {
    "webpack-browser-sync": "bin/webpack-browser-sync.js"
  },
  "files": [
    "src/",
    "lib/",
    "bin/"
  ],
  "engines": {
    "node": ">= 6"
  },
  "config": {
    "MOCHA_OPTS": "-R dot --compilers js:babel-core/register src/__tests__/*.spec.js"
  },
  "scripts": {
    "build": "babel src/ --ignore __*__ --out-dir lib/",
    "webpack": "babel-node ./src/command.js --config ./examples/webpack.config.js --hot --index=../index.html",
    "webpack2": "npm install webpack@2.1.0-beta.20 && npm run webpack",
    "lint": "eslint ./ --fix",
    "mocha": "mocha $npm_package_config_MOCHA_OPTS",
    "test": "npm run lint && npm run mocha",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "browser-sync": "2.17.x",
    "compression": "1.6.x",
    "connect-history-api-fallback": "1.3.x",
    "lodash": "4.17.x",
    "webpack-dev-middleware": "1.8.x",
    "webpack-hot-middleware": "2.13.x",
    "yargs": "6.4.x"
  },
  "peerDependencies": {
    "webpack": "*"
  },
  "devDependencies": {
    "@morlay/babel-preset": "2.1.x",
    "@morlay/eslint-config": "2.1.x",
    "@morlay/tests": "1.x.x",
    "babel-loader": "6.2.x",
    "babel-plugin-transform-es2015-modules-commonjs": "6.18.x",
    "html-webpack-plugin": "2.24.x",
    "webpack": "*"
  },
  "main": "index.js",
  "repository": "git@github.com:morlay/webpack-browser-sync.git",
  "author": "Morlay <morlay@qq.com>",
  "license": "WTFPL"
}
