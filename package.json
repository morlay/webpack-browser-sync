{
  "name": "webpack-browser-sync",
  "version": "0.8.1",
  "main": "lib/index.js",
  "description": "A webpack dev server with browser-sync",
  "bin": {
    "webpack-browser-sync": "bin/webpack-browser-sync.js"
  },
  "files": [
    "src/",
    "lib/",
    "bin/"
  ],
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "build": "npx tsc -p .",
    "webpack": "npx ts-node ./src/command.ts --config ./src/__examples__/webpack.config.ts --index=../index.html",
    "test": "npx prettier **/**/*.ts --write && npm run build && ava -v",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "@types/browser-sync": "0.0.x",
    "@types/compression": "0.0.x",
    "@types/connect": "3.4.31",
    "@types/lodash": "4.14.x",
    "@types/loglevel": "1.5.3",
    "@types/node": "9.4.x",
    "@types/webpack": "3.8.x",
    "@types/yargs": "11.0.x",
    "browser-sync": "2.23.x",
    "compression": "1.7.x",
    "connect-history-api-fallback": "1.5.x",
    "interpret": "1.1.x",
    "lodash": "4.17.x",
    "memory-fs": "0.4.x",
    "webpack-dev-middleware": "2.0.x",
    "webpack-hot-middleware": "2.21.x",
    "yargs": "11.0.x"
  },
  "peerDependencies": {
    "webpack": "2 || 3 || 4"
  },
  "devDependencies": {
    "@types/faker": "4.1.2",
    "@types/html-webpack-plugin": "2.30.2",
    "ava": "0.25.x",
    "faker": "4.1.x",
    "html-webpack-plugin": "webpack-contrib/html-webpack-plugin",
    "ts-loader": "4.0.x",
    "ts-node": "5.0.x",
    "prettier": "1.11.x",
    "typescript": "2.7.x",
    "webpack": "4.0.1"
  },
  "repository": "git@github.com:morlay/webpack-browser-sync.git",
  "author": "Morlay <morlay@qq.com>",
  "license": "WTFPL"
}
