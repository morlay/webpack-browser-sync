{
  "name": "webpack-browser-sync",
  "version": "0.12.0",
  "main": "lib/index.js",
  "description": "A webpack dev server with browser-sync",
  "bin": {
    "webpack-browser-sync": "bin/webpack-browser-sync.js"
  },
  "files": [
    "src/",
    "lib/",
    "bin/"
  ],
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "build": "tsc -p .",
    "start": "npm run build && node ./bin/webpack-browser-sync.js --config ./src/__examples__/webpack.config.ts --index=../index.html",
    "test": "npx prettier **/**/*.ts --write && jest",
    "prepare": "npm run build"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "json",
      "jsx",
      "js"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$"
  },
  "dependencies": {
    "@types/browser-sync": "0.0.x",
    "@types/compression": "0.0.x",
    "@types/connect": "3.4.32",
    "@types/connect-history-api-fallback": "1.3.1",
    "@types/interpret": "1.1.1",
    "@types/jest": "24.0.11",
    "@types/lodash": "4.14.x",
    "@types/loglevel": "1.5.4",
    "@types/node": "11.11.x",
    "@types/webpack": "4.4.x",
    "@types/webpack-dev-middleware": "2.0.2",
    "@types/webpack-hot-middleware": "2.16.5",
    "@types/yargs": "12.0.x",
    "browser-sync": "2.26.x",
    "compression": "1.7.x",
    "connect-history-api-fallback": "1.6.x",
    "interpret": "1.2.x",
    "jest": "24.4.0",
    "lodash": "4.17.x",
    "memory-fs": "0.4.x",
    "ts-jest": "24.0.0",
    "webpack-dev-middleware": "3.6.x",
    "webpack-hot-middleware": "2.24.x",
    "yargs": "13.2.x"
  },
  "peerDependencies": {
    "webpack": "4"
  },
  "devDependencies": {
    "@types/faker": "4.1.5",
    "@types/html-webpack-plugin": "3.2.0",
    "faker": "4.1.x",
    "html-webpack-plugin": "3.2.0",
    "prettier": "1.16.x",
    "ts-loader": "5.3.x",
    "ts-node": "8.0.x",
    "typescript": "3.3.x",
    "webpack": "4.12.0"
  },
  "repository": "git@github.com:morlay/webpack-browser-sync.git",
  "author": "Morlay <morlay@qq.com>",
  "license": "WTFPL"
}
