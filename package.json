{
  "name": "webpack-browser-sync",
  "version": "0.0.1",
  "description": "A webpack dev server with browser-sync",
  "bin": {
    "webpack-browser-sync": "bin/webpack-browser-sync.js"
  },
  "files": [
    "bin/",
    "src/",
    "lib/"
  ],
  "engines": {
    "node": ">= 6"
  },
  "config": {
    "MOCHA_OPTS": "-R dot --compilers js:babel-core/register src/__tests__/*.spec.js"
  },
  "scripts": {
    "build": "babel src/ --ignore __*__ --out-dir lib/",
    "start": "npm run build && node ./bin/webpack-browser-sync --config ./examples/webpack.config.js --hot",
    "lint": "eslint ./ --fix",
    "mocha": "mocha $npm_package_config_MOCHA_OPTS",
    "test": "npm run build && npm run lint && npm run mocha"
  },
  "dependencies": {
    "browser-sync": "2.13.x",
    "compression": "1.6.x",
    "connect-history-api-fallback": "1.2.x",
    "lodash": "4.14.x",
    "webpack": "1.x",
    "webpack-dev-middleware": "1.6.x",
    "webpack-hot-middleware": "2.12.x",
    "yargs": "4.8.x"
  },
  "devDependencies": {
    "@morlay/babel-preset": "1.0.x",
    "@morlay/eslint-config": "1.0.x",
    "@morlay/tests": "1.x.x",
    "babel-loader": "6.2.x",
    "babel-plugin-transform-es2015-modules-commonjs": "6.11.x",
    "html-webpack-plugin": "2.22.x"
  },
  "main": "index.js",
  "directories": {
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morlay/webpack-browser-sync.git"
  },
  "bugs": {
    "url": "https://github.com/morlay/webpack-browser-sync/issues"
  },
  "homepage": "https://github.com/morlay/webpack-browser-sync#readme"
}
